@import '_reset'

white = #fff
blue = #2196F3
indigo = #3F51B5
green = #4CAF50
lime = #CDDC39

body
  background-color #fff
  color white

.global-header
  width 100%
  height 400px
  padding 60px 0
  background url('../img/background.jpg') center center no-repeat
  background-size cover
  &__profile-image
    width 100px
    height 100px
    display block
    margin 0 auto
    border-radius 50%
  &__name
    color indigo
    font-size 32px
    text-align center
    margin 30px 0 0

.skills
  background blue
  text-align center
  padding 40px 0
  &>h2
    font-size 48px
.skill-set
  margin 40px 0
  & h3
    text-decoration underline
    display block
    text-align center
  & li
    display inline-block
    margin 0 40px
  & .devicons
    font-size 32px

.company
  background green
  text-align center
  padding 40px 0
  &>h2
    margin 0 0 20px

.sns
  background lime
  text-align center
  padding 40px 0
  &>h2
    margin 0 0 20px
